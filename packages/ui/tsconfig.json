{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/utils/*": ["./utils/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/providers/*": ["./providers/*"],
      "@/styles/*": ["./styles/*"],
      "@/assets/*": ["./assets/*"],
      "@vanyshr/shared/*": ["../../shared/src/*"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../shared" }
  ],
  "exclude": ["dist", "node_modules"]
}
