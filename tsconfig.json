{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "isolatedModules": true,
    
    "baseUrl": ".",
    "paths": {
      "@vanyshr/shared": ["packages/shared/src/index.ts"],
      "@vanyshr/shared/*": ["packages/shared/src/*"],
      "@vanyshr/services": ["packages/services/src/index.ts"],
      "@vanyshr/services/*": ["packages/services/src/*"],
      "@vanyshr/ui": ["packages/ui/src/index.ts"],
      "@vanyshr/ui/*": ["packages/ui/src/*"],
      "@vanyshr/backend": ["packages/backend/src/index.ts"],
      "@vanyshr/backend/*": ["packages/backend/src/*"]
    }
  },
  "include": ["packages/*/src", "apps/*/src"],
  "exclude": ["node_modules", "dist", "build"]
}
